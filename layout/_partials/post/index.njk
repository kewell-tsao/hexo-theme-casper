{# 首页、归档、分类、标签 #}
<div id="site-main" class="site-main outer" role="main">
  <div class="inner">
    <div class="post-feed">
      {%- for post in page.posts.toArray() %}
        {{ partial('_partials/post/card.njk', {post: post}, {cache: 'post-card:' + post.slug}) }}
      {%- endfor %}
    </div>
  </div>
</div>
{# 显示页号 #}
{% if config.index_generator.per_page !== 0 %}
  <div class="outer">
    <nav class="pagination">
      {% if page.total > 1 %}
        <nav class="page-nav">
          {{ paginator({prev_text: '← PREV', next_text: 'NEXT →'}) }}
        </nav>
      {% endif %}
    </nav>
  </div>
{% endif %}
